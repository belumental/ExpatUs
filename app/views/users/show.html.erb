<div><%= render "shared/searchbar" %></div>

<div class="profile-image-container">
  <%= cl_image_tag @user.photo.key,  transformation: [
    {aspect_ratio: "1.0", width: 150, crop: "fill"},
    {radius: "max"},
    {fetch_format: "auto"}
    ]%>
</div>

<div class="row w-100 user-profile">
  <div class="col-12 mb-4">
    <div class="card user-card">
      <div class="card-body">
        <h6 class="username"><%= current_user.username.to_s.capitalize %></h6>
        <h6 class="full-name"><%= current_user.name.to_s.capitalize + " " + current_user.last_name.to_s.capitalize %></h6>
        <h6 class="email"><%= current_user.email %></h6>
      </div>
    </div>
  </div>
</div>

<div class="button-container">
  <%= link_to "My Chats", yourchats_path, class: "btn btn-secondary" %>
</div>
<br>
<div class="button-container">
  <%= link_to "Favorites", stareds_path, class: "btn btn-secondary" %>
  <%# path will be changed according to chats created by me page %>
</div>
<br>
<div class="button-container">
  <%= button_to "Log Out", destroy_user_session_path, method: :delete, class: "btn btn-secondary" %>
</div>
