<div class="containter">

<div class="background" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(<%= image_path('banner.jpg')%>);
     background-size: cover;
     background-position: center;
     background-repeat: no-repeat;">
   <%= render "shared/searchbar" %>
  <h1 class="title">Welcome Home <%= current_user.username.to_s.capitalize %> </h1>
<br>
</div>
<h3 class="title">Trending Chats</h3>
      <div class="button-container">
      <%= link_to "Create a Chat", new_chat_path(@chat), class: "btn btn-secondary" %>
    </div>
    <br>
  <div class="container d-flex flex-column align-items-center">
    <div class="row w-100">
      <% @chats.each do |chat| %>
        <div class="col-12 mb-2 mt-4">
          <%= link_to chat_path(chat), style: "text-decoration: none; color: inherit;" do %>
            <div class="card">
              <div class="card-body">
                <h5 class="card-title"><%= chat.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted"><%= chat.category %></h6>
                <p class="card-text"><%= chat.description %></p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>

  </div>
</div>
